{{#if isEditing}}
  {{edit-card title=(unbound card.title)
              description=(unbound card.description)
              update=(action "cardUpdated")
              close=(action "hideEditModal")
              delete=(action "cardDeleted")}}
{{/if}}

{{#if card.isNew}}
  {{input placeholder="Title" classNameBindings=":card-title-inline-input card.isValid::invalid" value=card.title}}
  <br>
  <button {{action "save"}}>Save</button>
  <a href="#" {{action "cancelCreate"}} class="cancel">cancel</a>
{{else}}
  <a href="#" {{action "edit"}}>{{card.title}}</a>
{{/if}}
