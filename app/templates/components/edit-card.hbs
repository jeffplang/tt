{{#modal-dialog close=(action "close") targetAttachment="center" translucentOverlay="true"}}
  <a class="close-btn" href="#" {{action "close"}}>X</a>
  <form {{action "update" on="submit"}}>
    {{input classNameBindings=":card-title-input card.invalid:invalid" placeholder="Title" value=formTitle}}
    <br>
    {{textarea placeholder="Description" classNames="card-description-input" value=formDescription}}
    <br>
    <button class="save-btn" {{action "update"}}>Save</button>

    <div class="edit-card-form-delete-container">
      {{#if isConfirmingDelete}}
        Really delete?
        <button class="delete-confirm-btn yes" {{action "confirmDelete"}}>Yes</button>
        <button class="delete-confirm-btn no" {{action "cancelDelete"}}>No</button>
      {{else}}
        <button class="delete-btn" {{action "delete"}}>Delete</button>
      {{/if}}
    </div>
  </form>
{{/modal-dialog}}
